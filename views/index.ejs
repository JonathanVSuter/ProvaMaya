<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Encurtador</title>
</head>
<body>
    <div class="container">
        <h1>Encurtador de URL</h1>
        <form action="/encurtarUrl" method="POST" class="my-4form-inline">
            <label 
                for="fullUrl" 
                class="sr-only">Url completa</label>
            <input 
                required    
                type="url" 
                placeholder="URL" 
                name="fullUrl" 
                id="fullUrl"/>
            <button 
                type="submit"
                class="btn btn-success">Encurtar!</button> 
        </form>
        <table
            class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Inteira</th>
                    <th>Curta</th>
                    <th>Quantidade de clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urlsEncurtadas.forEach(element => {%>
                <tr>
                    <td>
                        <a href="<%= element.inteira%>"><%= element.inteira%></a>
                    </td>
                    <td>
                        <a href="<%= element.encurtada%>"><%= element.encurtada%></a>
                    </td>
                    <td>
                        <%= element.cliques%>
                    </td>
                </tr>
                <% }) %>                 
            </tbody>
        </table>
    </div>    
</body>
</html>